		// Declarem variables
		ArrayList<String> llistaMesos = new ArrayList<String>();
	
		// Creem  mesos i afegim a la ArrayList
		llistaMesos.add("Gener");
		llistaMesos.add("Febrer");
		llistaMesos.add("Mar√ß");
