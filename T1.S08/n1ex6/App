	//Metode amb lambda per ordenar per tamany
	static void ordenaLlista(ArrayList<String> llistaMesos) {

		llistaMesos.sort(Comparator.comparing(m -> m.length()));
		llistaMesos.forEach(m -> System.out.println(m));

	}

}
