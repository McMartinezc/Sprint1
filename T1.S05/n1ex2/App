import java.io.File;
import java.util.Arrays;

public class App {

	public static void main(String[] args) {

		File directori = new File("c:/"); // Creem objecte del directori a llistar en aquest cas la carpeta C
		
		fitxerRecursiu(directori, "\t");
		
	}
	
	public static void fitxerRecursiu (File directori, String separar) {
		
		File[] llista = directori.listFiles(); 
			
		if (llista != null) {
			for (int i = 0; i < llista.length; i++) { // Pritem el contingut que tÃ© l'array per ordre
				System.out.println(separar +llista[i].getName());
				if (llista[i].isDirectory()) {
					String nou_separador = separar +" ";
					fitxerRecursiu(llista[i], nou_separador);
				}
			}
		}
	}

}
