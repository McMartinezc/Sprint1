package n2ex1;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Entrada extends Exception {

	static Scanner input = new Scanner(System.in);

	// Metode Evalua si la dada introduïda és un byte
	public static byte llegirByte(String missatge) {
		boolean encontrado = false;
		byte valor = 0;

		do {

			try {
				System.out.print(missatge);
				valor = input.nextByte();
				encontrado = true;
			} catch (InputMismatchException error) {
				System.out.println("Ha d'introduïr un valor tipus byte (-128 a 127). ");
				input.next();
				// error.printStackTrace();
			}
		} while (!encontrado);
		return valor;
	}

	public static int llegirInt(String missatge) {
		boolean encontrado = false;
		int valor = 0;

		do {

			try {

				System.out.print(missatge);
				valor = input.nextInt();
				encontrado = true;
			} catch (InputMismatchException error) {
				System.out.println("Ha d'introduïr un valor tipus enter (–2.147.483.648 a 2.147.483.647). ");
				// error.printStackTrace();
				input.next();
			}
		} while (!encontrado);
		return valor;
	}

	public static float llegirFloat(String missatge) {
		boolean encontrado = false;
		float valor = 0;

		do {

			try {

				System.out.print(missatge);
				valor = input.nextFloat();
				encontrado = true;
			} catch (InputMismatchException error) {
				System.out.println("Ha d'introduïr un valor tipus decimal. ");
				// error.printStackTrace();
				input.next();
			}
		} while (!encontrado);
		return valor;
	}

	public static double llegirDouble(String missatge) {
		boolean encontrado = false;
		double valor = 0;

		do {

			try {

				System.out.print(missatge);
				valor = input.nextDouble();
				encontrado = true;
			} catch (InputMismatchException error) {
				System.out.println("Ha d'introduïr un valor tipus decimal. ");
				// error.printStackTrace();
				input.next();
			}
		} while (!encontrado);
		return valor;
	}

	public static char llegirChar(String missatge) {
		boolean encontrado = false;
		char lletra = 0;

		do {

			try {

				System.out.print(missatge);
				lletra = input.next().charAt(0);
				encontrado = true;
			} catch (Exception error) {
				System.out.println("Ha d'introduïr un caracter. ");
				// error.printStackTrace();
				input.next();
			}
		} while (!encontrado);
		return lletra;
	}

	public static String llegirString(String missatge) {
		boolean encontrado = false;
		String cadena = "";

		do {

			try {

				System.out.print(missatge);
				cadena = input.nextLine();
				encontrado = true;

			} catch (Exception error) {
				System.out.println("Ha d'introduïr una cadena. ");
				// error.printStackTrace();
				input.next();
			}
		} while (!encontrado);
		return cadena;
	}

	public static boolean llegirSiNo(String missatge) {
		boolean encontrado = false, valorBoolea = false;
		String valor;

		do {

			try {

				System.out.print(missatge);
				valor = input.nextLine();
				encontrado = true;
				if (valor.equalsIgnoreCase("s")) {
					valorBoolea = true;
				} else if (valor.equalsIgnoreCase("n")) {
					valorBoolea = false;
				}
			} catch (Exception error) {
				System.out.println("Ha d'introduïr un valor S / N ");
				// error.printStackTrace();
				input.next();
			}
		} while (!encontrado);
		return valorBoolea;
	}
}
