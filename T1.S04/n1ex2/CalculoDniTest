package n1ex2;

import static org.junit.Assert.assertEquals;

import java.util.Arrays;
import java.util.Collection;
import org.junit.Test;
import org.junit.runner.RunWith;
import org.junit.runners.Parameterized;

@RunWith(value = Parameterized.class)

class CalculoDniTest {
	
	//Declaraci√≥ variable
	private int NumDni;
	char lletra;
	private CalculoDni calculodni;
	
	
	//Metode constructor
	public CalculoDniTest(int numDni, char lletra) {
		this.NumDni = numDni;
		this.lletra= lletra; //Resultat esperat
		calculodni = new CalculoDni();
	}
	
	@Parameterized.Parameters
	public static Collection resultatsDni() {
		return Arrays.asList(new Object[][] {
			{ 40527087, 'Y'},
			{'S', 41001310}});
		}
	
	@Test
	public void TestCalculoDni() {
		
		assertEquals(calculodni.calculRestoDNI(NumDni), lletra);
	}

}
