package n1ex1;

import java.util.Objects;

public class Month {

	// Declaració atributs
	private String name;

	// Metode constructor
	public Month(String name) {
		this.name = name;
	}

	// Metodes GETTERS i SETTERS
	public String getName() { // Donem informació
		return name;
	}

	public void setName(String name) {// Canvi d'informació
		this.name = name;
	}

	// Metodes sobreescrits

	public int hashCode() {
		return Objects.hash(name);
	}

	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Month other = (Month) obj;
		return Objects.equals(name, other.name);
	}

	public String toString() {
		return name;
	}

}

/////////////////////////////////////////////////////////////////
import java.util.ArrayList;
import java.util.Objects;

public class Month {

	// Declaració atributs
	private String name;
	ArrayList<Month> llistaMesos;

	// Metode constructor
	public Month(String name) {
		this.name = name;
		llistaMesos = new ArrayList<Month>();
	}

	// Metodes GETTERS i SETTERS
	public String getName() { // Donem informació
		return name;
	}

	public void setName(String name) {// Canvi d'informació
		this.name = name;
	}
	public  ArrayList<Month> getLlistaMesos() {
		return llistaMesos;
	}

	public void setLlistaMesos(ArrayList<Month> llistaMesos) {
		this.llistaMesos = llistaMesos;
	}
	

	//Metodes propis
	
	public int buscaMes (ArrayList<Month> llistaMesos, String mes) {
		int i= 0, indexMes = -1;
		boolean encontrado = false;
		
		while (( i < llistaMesos.size()) && (encontrado == false)) {
			if (llistaMesos.get(i).getName().equalsIgnoreCase(mes)) {
				indexMes = i;
				encontrado = true;
			}
			i++;
		}
		return indexMes;
	}
	
	// Metodes sobreescrits

	public int hashCode() {
		return Objects.hash(name);
	}

	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		
		Month other = (Month) obj;
		return Objects.equals(name, other.name);
	}

	public String toString() {
		return name;
	}

}
