 package n1ex3;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class App {

	public static void main(String[] args) throws IOException {
		//Declarar variables
		Map<String, String> countries= new HashMap<String, String>();
		String linea;
		String[]cadenas;
		
		try {
				File fitxer = new File("C:\\Users\\formacio\\Desktop\\repository\\countries.txt"); //indiquem la ruta del fitxer
				FileReader fr = new FileReader(fitxer); //Llegeix les el fitxer 
				BufferedReader fitxerBuf = new BufferedReader(fr); //LLegeix el fitxer linia a linia
						
								
				while ((linea = fitxerBuf.readLine()) != null) {
					cadenas = linea.split(" ");
					countries.put(linea, linea);
				}
				
				fr.close();
				
					System.out.println("Fitxer importat correctament");
					
			} catch (FileNotFoundException error) {
				System.out.println("Fichero no encontrado");
		
			} catch (IOException error) {
				System.out.println("Error de E/S");
			
			}
			
		
	}
	
		
		
		
